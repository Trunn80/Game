x = 23                                                                                      #Угаданное число
cnt = 0                                                                                     #Счетчик

while True:                                                                                  #Цикл
    user_number = int(input('Я загадал число от 1 до 100, угайдай его :D'))                  #Ввод
    cnt += 1                                                                                 #Кол-во попыток
    if user_number == x:                                                                     #Если угадал
        print(f'Ты угадал число за {cnt} попыток')
        print('Спасибо за игру!')
        break # выход из цикла
    elif user_number > x:                                                                    #Если число меньше угаданного
        print('Наше число меньше того, которое ты ввел')
    else:                                                                                    #Если больше угаданного 
        print('Наше число больше того, которое ты ввел')
